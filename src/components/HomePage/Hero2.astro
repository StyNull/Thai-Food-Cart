---
import HeroImg from "@assets/images/HomePage/HeroImg.webp"
---

<!-- ============================================ -->
<!--                    Hero                      -->
<!-- ============================================ -->

<section id="hero-2151">
    <div class="cs-container">
        <div class="cs-content">
            <span class="cs-topper">Family Recipes from Esan, Thailand</span>
            <h2 class="cs-title">Real Esan Thai Food in Vancouver</h2>
            <p class="cs-text">
                Our food cart brings you authentic dishes from Esanâ€”Thailand's legendary region for rich, spicy cuisine. Family recipes, fresh ingredients, bold flavors that don't hold back.
            </p>
            <a href="/menu" class="cs-button-solid">View Menu</a>
        </div>
        <picture class="cs-background">
            <!--Mobile Image-->
            <source media="(max-width: 600px)" srcset={HeroImg.src}>
            <!--Tablet and above Image-->
            <source media="(min-width: 601px)" srcset={HeroImg.src}>
            <img loading="lazy" decoding="async" src={HeroImg.src} alt="Authentic Thai noodle dish from Esan Thai Food Cart" width="960" height="857">Retry        </picture>
    </div>
</section>
                                
<style>

/*-- -------------------------- -->
<---            Hero            -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
  #hero-2151 {
    /* 160px - 200px - top leaving extra space for the navigation */
    padding: clamp(10rem, 25.95vw, 12.5rem) 0 0 0;
    background-color: var(--backgroundColor); /* e.g. #FAF7F0 */
    overflow: hidden;
    position: relative;
  }
  #hero-2151 .cs-container {
    width: 100%;
    max-width: 107.5rem;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* 48px - 100px */
    gap: clamp(3rem, 6vw, 6.25rem);
  }
  #hero-2151 .cs-content {
    /* set text align to left if content needs to be left aligned */
    text-align: left;

    width: 100%;
    /* prevents padding and border from affecting height and width */
    box-sizing: border-box;
    /* 16px - 100px left & right */
    padding: 0 clamp(1rem, 2vw, 6.25rem);
    display: flex;
    flex-direction: column;
    /* centers content horizontally, set to flex-start to left align */
    align-items: flex-start;
    position: relative;
    z-index: 1;
    background: var(--surfaceColor);           /* #FFFFFF */
    border: 1px solid var(--borderColor);      /* rgba(0,0,0,.08) */
    border-radius: 20px;
    box-shadow: 0 10px 30px var(--shadowColor);/* rgba(0,0,0,.08) */
    padding: clamp(1.25rem, 3vw, 2rem);  
  }

#hero-2151 .cs-title{ margin-bottom: .75rem; }
#hero-2151 .cs-text{ margin-bottom: 1.75rem; }
  #hero-2151 .cs-title {
    /* 39px - 61px */
    font-size: clamp(2.4375rem, 6.4vw, 3.8125rem);
    max-width: 36ch; 
  }
  #hero-2151 .cs-text {
    /* 16px - 20px */
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    max-width: 48ch; 
    margin: 0 0 2rem 0;
    line-height: 1.7;
  }
  #hero-2151 .cs-button-solid {
    font-size: 1rem;
    font-weight: 700;
    /* 46px - 56px */
    line-height: clamp(2.875rem, 5.5vw, 3.5rem);
    text-align: center;
    text-decoration: none;
    min-width: 12.5rem;
    margin: 0;
    /* prevents padding from adding to the width */
    box-sizing: border-box;
    /* 32px - 48px */
    padding: 0 clamp(2rem, 4vw, 3rem);
    background-color: var(--primary);
    color: #1a1a1a;
    display: inline-block;
    position: relative;
    z-index: 1;
    transition: color 0.3s, transform .15s;
    border-radius: 14px; 
  }
  #hero-2151 .cs-button-solid:before {
    display:none;
    content: "";
    width: 0%;
    height: 100%;
    background: #ffffff;
    opacity: 1;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    transition: width 0.3s;
  }
  #hero-2151 .cs-button-solid:hover {
    background-color: var(--primaryLight); /* e.g. #F4C865 */
    transform: scale(1.02);
  }
  #hero-2151 .cs-button-solid:hover:before {
    width: 100%;
  }
  #hero-2151 .cs-background {
    width: 100%;
    /* height: 100vw; */
    /* max-height: 29.75rem; */
    height: min(72vw, 22rem);
    display: block;
    position: relative;
    z-index: 1;
    
  }
  #hero-2151 .cs-background::after{
    content:"";
    position:absolute; inset:0;
    /* gentle right-side vignette so CTAs/text read well */
    background: linear-gradient(90deg, rgba(250,247,240,0) 40%, rgba(250,247,240,.35) 100%);
    pointer-events:none;
}
  #hero-2151 .cs-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 20px;
  }
  #hero-2151 .cs-graphic {
    /* 200px - 280px */
    width: clamp(12.5rem, 25vw, 17.5rem);
    height: auto;
    display: none;
    position: absolute;
  }
}
/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
  #hero-2151 .cs-graphic {
    display: block;
    bottom: calc(clamp(3rem, 6vw, 6.25rem)*-1);
    left: 0;
    z-index: 0;
  }
  #hero-2151 .cs-content {
    /* 60px - 100px */
    padding-bottom: clamp(3.75rem, 7.82vw, 6.25rem);
  }
}
/* Small Desktop - 1024px */
@media only screen and (min-width: 64rem) {
  #hero-2151 {
    /* 120px - 250px top */
    /* 60px - 200px  bottom */
    padding: clamp(7.5rem, 23.82vw, 15.625rem) 1rem clamp(3.75rem, 15.82vw, 12.5rem) 1rem;
  }
  #hero-2151 .cs-container {
    flex-direction: row;
    position: relative;
  }
  #hero-2151 .cs-content {
    /* removed padding and put it on the section */
    width: 55%;
    /* 16px - 100px */
    padding: clamp(2rem, 4vw, 4rem);
  }
  #hero-2151 .cs-background {
    width: 38%; /* Reduced from 42% to create gap */
    height: auto;
    max-height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
  }
  #hero-2151 .cs-graphic {
    bottom: calc(clamp(3.75rem, 15.82vw, 12.5rem)*-1);
  }
}

/* Large Desktop - 1440px */
@media only screen and (min-width: 90rem) {
  #hero-2151 .cs-background {
    width: 45%; /* Reduced from 50% to maintain gap */
  }
  #hero-2151 .cs-content {
    width: 50%;
  }
  #hero-2151 .cs-graphic {
    left: -4.375rem;
  }
}
                                
</style>