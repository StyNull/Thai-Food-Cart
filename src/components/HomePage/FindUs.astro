---
const hours = [
  { days: "Mon – Fri", time: "3:00 PM – 9:00 PM" },
  { days: "Saturday", time: "12:00 PM – 9:00 PM" },
  { days: "Sunday", time: "12:00 PM – 7:00 PM" }
]
---

<section id="find-us">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">Find Us</span>
      <h2 class="cs-title">Visit Our Food Cart</h2>
      <p class="cs-text">
        We're parked in Uptown Village right next to Trap Door Brewing. Order your food, grab a beer, and enjoy it inside or on their patio.
      </p>

      <div class="cs-info">
        <div class="cs-block">
          <h3 class="cs-h3">Location</h3>
          <p>2315 Main St, Vancouver, WA 98660</p>
          <p class="cs-note">Next to Trap Door Brewing in Uptown Village</p>
        </div>

        <div class="cs-block">
          <h3 class="cs-h3">Hours</h3>
          <ul class="cs-hours">
            {hours.map((item) => (
              <li><span>{item.days}</span><span>{item.time}</span></li>
            ))}
          </ul>
          <p class="cs-note">We sometimes sell out early — come hungry!</p>
        </div>

        <div class="cs-buttons">
          <a href="https://maps.google.com?q=2315+Main+St+Vancouver+WA+98660"
             target="_blank" rel="noopener" class="cs-button-solid">Get Directions</a>
          <!-- <a href="tel:+15039330151" class="cs-button-outline">Call to Order</a> -->
        </div>
      </div>
    </div>

    <div class="cs-map-card" role="region" aria-label="Map to Esan Thai Food Cart">
      <iframe
        class="cs-map"
        title="Map showing Esan Thai Food Cart location at 2315 Main St, Vancouver WA"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2795.5!2d-122.6731!3d45.6387!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5495a8a5f8abf8f1%3A0x9c6e6f7d5a9d7c8b!2s2315%20Main%20St%2C%20Vancouver%2C%20WA%2098660!5e0!3m2!1sen!2sus!4v1700000000000"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
  </div>
</section>

<style>
#find-us {
  background: var(--backgroundColor);
  padding: clamp(3.5rem, 7vw, 7rem) 1rem;
}

#find-us .cs-container {
  max-width: 80rem;
  margin: 0 auto;
  display: grid;
  gap: clamp(2rem, 5vw, 3rem);
}

#find-us .cs-content {
  background: var(--surfaceColor);
  border: 1px solid var(--borderColor);
  border-radius: 20px;
  box-shadow: 0 10px 30px var(--shadowColor);
  padding: clamp(1.5rem, 3vw, 2.25rem);
}

#find-us .cs-title {
  margin: 0 0 0.5rem;
}

#find-us .cs-text {
  margin: 0 0 1.5rem;
  line-height: 1.6;
  max-width: 48ch;
}

#find-us .cs-info {
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

#find-us .cs-block p {
  margin: 0;
  line-height: 1.5;
}

#find-us .cs-h3 {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--headerColor);
  margin: 0 0 0.25rem;
}

#find-us .cs-hours {
  list-style: none;
  margin: 0.25rem 0 0;
  padding: 0;
  display: grid;
  gap: 0.35rem;
}

#find-us .cs-hours li {
  display: flex;
  justify-content: space-between;
  font-size: 1rem;
  border-bottom: 1px dashed rgba(0,0,0,0.08);
  padding: 0.35rem 0;
}

#find-us .cs-note {
  font-size: 0.875rem;
  color: #4a4a4a;
  margin-top: 0.5rem;
}

#find-us .cs-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  margin-top: 0.5rem;
}

#find-us .cs-button-solid {
  background: var(--primary);
  color: #1a1a1a;
  padding: 1rem 1.75rem;
  border-radius: 14px;
  text-decoration: none;
  font-weight: 700;
  font-size: 1rem;
  line-height: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s, transform 0.15s;
}

#find-us .cs-button-solid:hover {
  background: var(--primaryLight);
  transform: scale(1.02);
}

#find-us .cs-button-outline {
  border: 2px solid var(--primary);
  color: #6b5a10;
  background: transparent;
  padding: 1rem 1.75rem;
  border-radius: 14px;
  text-decoration: none;
  font-weight: 700;
  font-size: 1rem;
  line-height: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: border-color 0.2s, color 0.2s, background-color 0.2s, transform 0.15s;
}

#find-us .cs-button-outline:hover {
  background: var(--primary);
  color: var(--bodyTextColorWhite);
  transform: scale(1.02);
}

#find-us .cs-map-card {
  background: var(--surfaceColor);
  border: 1px solid var(--borderColor);
  border-radius: 20px;
  box-shadow: 0 10px 30px var(--shadowColor);
  overflow: hidden;
  min-height: 18rem;
}

#find-us .cs-map {
  width: 100%;
  height: clamp(18rem, 40vw, 26rem);
  border: 0;
  display: block;
}

/* Desktop - side by side */
@media (min-width: 64rem) {
  #find-us .cs-container {
    grid-template-columns: 1fr 1fr;
    align-items: stretch;
  }

  #find-us .cs-map-card {
    min-height: 100%;
  }

  #find-us .cs-map {
    height: 100%;
  }
}
</style>