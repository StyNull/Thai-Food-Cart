---
const reviews = [
  {
    name: "VeRnSquad5611",
    location: "Buena Park, CA",
    rating: 5,
    text: "Best Thai food in all of Vancouver. This is the closest place I have found that tastes like what I actually had in Thailand. So much flavor."
  },
  {
    name: "Travis V.",
    location: "Vancouver, WA",
    rating: 5,
    text: "This place is so consistent! I eat here when I'm at Trapdoor and they are quick, delicious and friendly. Insider tip: ask for the chili flakes!"
  },
  {
    name: "Claire Marie W.",
    location: "Bend, OR",
    rating: 5,
    text: "This place puts that good boom pow pow in your mouth. Very friendly service and amazing food!"
  }
]

const stars = "★★★★★"
---

<section id="reviews">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">Reviews</span>
      <h2 class="cs-title">What Our Customers Say</h2>
    </div>
    <ul class="cs-review-list">
      {reviews.map((review) => (
        <li class="cs-review-item">
          <span class="cs-stars" aria-label="5 out of 5 stars">{stars}</span>
          <p class="cs-review-text">"{review.text}"</p>
          <div class="cs-reviewer">
            <span class="cs-name">{review.name}</span>
            <span class="cs-location">{review.location}</span>
          </div>
        </li>
      ))}
    </ul>
    <div class="cs-cta">
      <a href="/reviews" class="cs-button-solid">See All Reviews</a>
    </div>
  </div>
</section>

<style>
#reviews {
  background-color: var(--backgroundColor);
  padding: clamp(3.5rem, 7vw, 7rem) 1rem;
}

#reviews .cs-container {
  width: 100%;
  max-width: 80rem;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: clamp(2rem, 5vw, 3rem);
}

#reviews .cs-content {
  text-align: center;
}

#reviews .cs-title {
  margin: 0;
}

#reviews .cs-review-list {
  list-style: none;
  margin: 0;
  padding: 0;
  width: 100%;
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.25rem;
}

#reviews .cs-review-item {
  background: var(--surfaceColor);
  border: 1px solid var(--borderColor);
  border-radius: 16px;
  box-shadow: 0 8px 24px var(--shadowColor);
  padding: clamp(1.5rem, 4vw, 2rem);
  display: flex;
  flex-direction: column;
  gap: 1rem;
  transition: transform 0.2s;
}

#reviews .cs-review-item:hover {
  transform: translateY(-4px);
}

#reviews .cs-stars {
  color: var(--primary);
  font-size: 1.25rem;
  letter-spacing: 2px;
}

#reviews .cs-review-text {
  margin: 0;
  font-size: 1rem;
  line-height: 1.7;
  color: var(--bodyTextColor);
}

#reviews .cs-reviewer {
  display: flex;
  flex-direction: column;
  gap: 0.125rem;
  margin-top: auto;
  padding-top: 1rem;
  border-top: 1px solid var(--borderColor);
}

#reviews .cs-name {
  font-weight: 700;
  font-size: 1rem;
  color: var(--headerColor);
}

#reviews .cs-location {
  font-size: 0.875rem;
  color: var(--bodyTextColor);
  opacity: 0.8;
}

#reviews .cs-cta {
  display: flex;
  justify-content: center;
}

#reviews .cs-button-solid {
  font-size: 1rem;
  font-weight: 700;
  line-height: 1;
  text-decoration: none;
  color: var(--bodyTextColorWhite);
  background-color: var(--primary);
  padding: 1rem 2rem;
  border-radius: 14px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s, transform 0.15s;
}

#reviews .cs-button-solid:hover {
  background-color: var(--primaryLight);
  transform: scale(1.02);
}

/* Tablet - 3 columns */
@media (min-width: 48rem) {
  #reviews .cs-review-list {
    grid-template-columns: repeat(3, 1fr);
  }
}
</style>