---
import { Image } from "astro:assets"
import CTAImage from "@assets/images/HomePage/PKMIRL.webp"
---

<section id="cta">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">Hungry?</span>
      <h2 class="cs-title">Ready for Real Thai Flavor?</h2>
      <p class="cs-text">
        Fresh, wok-fired dishes made the way they're supposed to be. We're at Trap Door Brewing—grab your food and a beer.
      </p>
      <div class="cs-button-group">
        <a class="cs-button-solid cs-primary" href="/menu">View Full Menu</a>
        <a class="cs-button-solid cs-secondary" href="https://maps.google.com?q=2315+Main+St+Vancouver+WA+98660" target="_blank" rel="noopener">Get Directions</a>
      </div>
      <p class="cs-micro-trust">
        Vegetarian Options • Spice Your Way
      </p>
      <p class="cs-urgency">
        Open today until 9 PM — we sometimes sell out early!
      </p>
    </div>
    <div class="cs-image-wrap">
      <Image 
        src={CTAImage} 
        alt="Pad Kee Mao drunken noodles from Esan Thai"
        width={500}
        height={600}
        loading="lazy"
        decoding="async"
        class="cs-picture"
      />
    </div>
  </div>
</section>

<style>
#cta {
  padding: 1.5rem 1rem 2rem;
  background-color: transparent;
}

#cta .cs-container {
  background-color: var(--secondary);
  border-radius: 2rem;
  max-width: 76rem;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

#cta .cs-content {
  padding: clamp(2rem, 5vw, 3rem);
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

#cta .cs-topper {
  color: var(--primaryLight);
}

#cta .cs-title {
  color: var(--bodyTextColorWhite);
  margin: 0;
}

#cta .cs-text {
  color: var(--bodyTextColorWhite);
  opacity: 0.95;
  margin: 0;
  max-width: 48ch;
  line-height: 1.6;
}

#cta .cs-button-group {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  margin-top: 0.5rem;
}

#cta .cs-button-solid {
  font-size: 1rem;
  font-weight: 700;
  line-height: 1;
  text-align: center;
  text-decoration: none;
  padding: 1rem 2rem;
  border-radius: 14px !important;
  transition: background-color 0.2s, transform 0.15s;
}

#cta .cs-button-solid.cs-primary {
  background-color: var(--primary);
  color: var(--bodyTextColorWhite);
}

#cta .cs-button-solid.cs-primary:hover {
  background-color: var(--primaryLight);
  color: var(--bodyTextColorWhite);
  border-radius: 14px !important;
  transform: scale(1.02);
}

#cta .cs-button-solid.cs-primary::before,
#cta .cs-button-solid.cs-primary::after {
  display: none !important;
  content: none !important;
}

#cta .cs-button-solid.cs-secondary {
  background-color: transparent;
  color: var(--bodyTextColorWhite);
  border: 2px solid var(--bodyTextColorWhite);
}

#cta .cs-button-solid.cs-secondary:hover {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 14px !important;
  transform: scale(1.02);
}

#cta .cs-button-solid.cs-secondary::before,
#cta .cs-button-solid.cs-secondary::after {
  display: none !important;
  content: none !important;
}

#cta .cs-micro-trust {
  font-size: 0.875rem;
  line-height: 1.5;
  margin: 0;
  color: var(--bodyTextColorWhite);
  opacity: 0.9;
  font-weight: 500;
}

#cta .cs-urgency {
  font-size: 0.8125rem;
  line-height: 1.5;
  margin: 0;
  color: var(--primaryLight);
  font-style: italic;
}

#cta .cs-image-wrap {
  width: 100%;
  height: 16rem;
  position: relative;
}

#cta .cs-picture {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

/* Desktop - 60/40 split */
@media (min-width: 64rem) {
  #cta .cs-container {
    flex-direction: row;
  }

  #cta .cs-content {
    width: 60%;
    padding: clamp(2.5rem, 5vw, 4rem);
    justify-content: center;
  }

  #cta .cs-image-wrap {
    width: 40%;
    height: auto;
    min-height: 100%;
  }

  #cta .cs-picture {
    position: absolute;
    inset: 0;
    border-radius: 0 2rem 2rem 0;
  }
}

/* For transparent PNG - centered instead of cover */
@media (min-width: 64rem) {
  #cta .cs-image-wrap.transparent-bg .cs-picture {
    object-fit: contain;
    padding: 1rem;
  }
}
</style>