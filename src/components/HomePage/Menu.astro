---
import { Image } from "astro:assets"
import PadThai from "@assets/images/HomePage/menuIMG/padThai.webp"
import PadSeeEw from "@assets/images/HomePage/menuIMG/PadSeeEw.webp"
import PadKeaMao from "@assets/images/HomePage/menuIMG/PadKeaMao.webp"
import Yakisoba from "@assets/images/HomePage/menuIMG/Yakisoba.webp"
import PadWoonSen from "@assets/images/HomePage/menuIMG/PadWoonSen.webp"
import TomYum from "@assets/images/HomePage/menuIMG/TomYum.webp"

const dishes = [
  {
    image: PadThai,
    alt: "Pad Thai noodles with egg and peanuts",
    name: "Pad Thai",
    description: "The classic. Rice noodles wok-tossed with egg, bean sprouts, and crushed peanuts in our house tamarind sauce."
  },
  {
    image: PadSeeEw,
    alt: "Pad See Ew with wide rice noodles and Chinese broccoli",
    name: "Pad See Ew",
    description: "Wide rice noodles charred in a hot wok with Chinese broccoli, egg, and sweet soy. Smoky and satisfying."
  },
  {
    image: PadKeaMao,
    alt: "Spicy Drunken Noodles with Thai basil",
    name: "Pad Kee Mao",
    description: "Drunken Noodles. Spicy, garlicky, and loaded with Thai basil. Our most requested dish for heat seekers."
  },
  {
    image: Yakisoba,
    alt: "Yakisoba stir-fried noodles with vegetables",
    name: "Yakisoba",
    description: "Japanese-style stir-fried noodles with a tangy, savory sauce. A crowd favorite with a little sweetness."
  },
  {
    image: PadWoonSen,
    alt: "Glass noodles stir-fried with vegetables and egg",
    name: "Pad Woon Sen",
    description: "Light and silky glass noodles with egg, vegetables, and a delicate savory sauce. Easy to love."
  },
  {
    image: TomYum,
    alt: "Tom Yum soup with shrimp and mushrooms",
    name: "Tom Yum",
    description: "Hot and sour soup with lemongrass, galangal, and lime. Bright, bold, and warmingâ€”Thailand's most famous soup."
  }
]
---

<section id="menu-highlights">
    <div class="cs-container">
        <div class="cs-content">
            <span class="cs-topper">Fan Favorites</span>
            <h2 class="cs-title">Signature Dishes</h2>
        </div>                  
        <ul class="cs-card-group">
            {dishes.map((dish) => (
                <li class="cs-item">
                    <div class="cs-link">
                        <Image 
                            src={dish.image} 
                            alt={dish.alt}
                            width={413}
                            height={340}
                            loading="lazy"
                            decoding="async"
                            class="cs-picture"
                        />
                        <h3 class="cs-h3">{dish.name}</h3>
                        <p class="cs-item-text">{dish.description}</p>
                    </div>
                </li>
            ))}
        </ul>
        <div class="cs-cta">
            <a href="#full-menu" class="cs-button-solid">View Full Menu</a>
        </div>
    </div>
</section>

<style>
#menu-highlights {
    background-color: var(--backgroundColor); 
    padding: clamp(3rem, 8vw, 5rem) 0;
}

#menu-highlights .cs-container {
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 2rem);
    display: flex;
    flex-direction: column;
    gap: clamp(2rem, 5vw, 3rem);
}

#menu-highlights .cs-content {
    text-align: left;
}

#menu-highlights .cs-title {
    margin: 0;
}

#menu-highlights .cs-card-group {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
}

#menu-highlights .cs-item {
    background: var(--surfaceColor);
    border: 1px solid var(--borderColor);
    border-radius: 16px;
    box-shadow: 0 8px 24px var(--shadowColor);
    overflow: hidden;
}

#menu-highlights .cs-link {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
}

#menu-highlights .cs-picture {
    width: 100%;
    height: auto;
    aspect-ratio: 413 / 340;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 1rem;
}

#menu-highlights .cs-h3 {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 0.75rem 0;
    color: var(--headerColor);
    text-align: center;
}

#menu-highlights .cs-item-text {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
    color: var(--bodyTextColor);
    text-align: center;
}

#menu-highlights .cs-cta {
    display: flex;
    justify-content: center;
}

#menu-highlights .cs-button-solid {
    background-color: var(--primary);
    color: #1a1a1a;
    font-weight: 700;
    font-size: 1rem;
    line-height: 1;
    text-decoration: none;
    padding: 1rem 2rem;
    border-radius: 14px;
    transition: background-color 0.2s, transform 0.15s;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

#menu-highlights .cs-button-solid::before,
#menu-highlights .cs-button-solid::after {
    display: none !important;
    content: none !important;
}

#menu-highlights .cs-button-solid:hover {
    background-color: var(--primaryLight);
    transform: scale(1.02);
    border-radius: 14px !important;
}

/* Tablet - 2 columns */
@media (min-width: 600px) {
    #menu-highlights .cs-card-group {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Desktop - 3 columns */
@media (min-width: 900px) {
    #menu-highlights .cs-card-group {
        grid-template-columns: repeat(3, 1fr);
    }
}
</style>