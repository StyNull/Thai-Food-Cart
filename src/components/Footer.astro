---
import Logo from "@assets/images/HomePage/logo.png"
import { Image } from "astro:assets"

const navLinks = [
  { name: "Menu", href: "/menu" },
  { name: "Reviews", href: "/reviews" },
  { name: "About", href: "/#about-us" }
]

const hours = [
  { days: "Mon – Fri", time: "3:00 PM – 9:00 PM" },
  { days: "Saturday", time: "12:00 PM – 9:00 PM" },
  { days: "Sunday", time: "12:00 PM – 7:00 PM" }
]
---

<footer id="footer">
  <div class="cs-container">
    <div class="cs-logo-group">
      <a aria-label="go back to home" class="cs-logo" href="/">
        <Image 
          src={Logo} 
          alt="Esan Thai Food Cart logo" 
          width={180} 
          height={60}
          class="cs-logo-img"
        />
      </a>
      <p class="cs-text">
        Authentic Esan Thai cuisine made fresh daily. Family recipes from Northeast Thailand, right here in Vancouver.
      </p>
      <div class="cs-social">
        <a class="cs-social-link" aria-label="visit yelp profile" href="https://www.yelp.com/biz/esan-thai-food-cart-vancouver" target="_blank" rel="noopener">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12.1 12.4l-4.9 2.3c-.5.2-1-.2-1-.8V7.5c0-.6.5-1 1-.8l4.9 2.3c.5.2.5 1 0 1.2l-4.9 2.2zm-1.6 4.8l3.4 3.4c.4.4 1 .1 1-.4V14c0-.5-.6-.8-1-.4l-3.4 3.4c-.4.4-.4 1 0 1.4l.1-.2zm5.5-5.2l3.4-3.4c.4-.4.1-1-.4-1H13c-.5 0-.8.6-.4 1l3.4 3.4z"/></svg>
        </a>
        <a class="cs-social-link" aria-label="visit facebook profile" href="#" target="_blank" rel="noopener">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
        </a>
        <a class="cs-social-link" aria-label="visit instagram profile" href="#" target="_blank" rel="noopener">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.2c3.2 0 3.6 0 4.9.1 1.2.1 1.8.2 2.2.4.6.2 1 .5 1.4.9.4.4.7.8.9 1.4.2.4.4 1 .4 2.2.1 1.3.1 1.6.1 4.9s0 3.6-.1 4.9c-.1 1.2-.2 1.8-.4 2.2-.2.6-.5 1-.9 1.4-.4.4-.8.7-1.4.9-.4.2-1 .4-2.2.4-1.3.1-1.6.1-4.9.1s-3.6 0-4.9-.1c-1.2-.1-1.8-.2-2.2-.4-.6-.2-1-.5-1.4-.9-.4-.4-.7-.8-.9-1.4-.2-.4-.4-1-.4-2.2-.1-1.3-.1-1.6-.1-4.9s0-3.6.1-4.9c.1-1.2.2-1.8.4-2.2.2-.6.5-1 .9-1.4.4-.4.8-.7 1.4-.9.4-.2 1-.4 2.2-.4 1.3-.1 1.6-.1 4.9-.1zm0-2.2C8.7 0 8.3 0 7 .1 5.7.1 4.7.3 3.9.6c-.9.3-1.6.8-2.3 1.5C.9 2.8.4 3.5.1 4.4c-.3.8-.5 1.8-.5 3.1C-.4 8.7-.4 9.1-.4 12s0 3.3.1 4.5c.1 1.3.2 2.3.5 3.1.3.9.8 1.6 1.5 2.3.7.7 1.4 1.2 2.3 1.5.8.3 1.8.5 3.1.5 1.3.1 1.7.1 4.5.1s3.2 0 4.5-.1c1.3-.1 2.3-.2 3.1-.5.9-.3 1.6-.8 2.3-1.5.7-.7 1.2-1.4 1.5-2.3.3-.8.5-1.8.5-3.1.1-1.3.1-1.7.1-4.5s0-3.2-.1-4.5c-.1-1.3-.2-2.3-.5-3.1-.3-.9-.8-1.6-1.5-2.3-.7-.7-1.4-1.2-2.3-1.5-.8-.3-1.8-.5-3.1-.5C15.3 0 14.9 0 12 0zm0 5.8a6.2 6.2 0 1 0 0 12.4 6.2 6.2 0 0 0 0-12.4zm0 10.2a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.4-10.4a1.4 1.4 0 1 1 0-2.8 1.4 1.4 0 0 1 0 2.8z"/></svg>
        </a>
      </div>
    </div>

    <nav class="cs-nav" aria-label="Footer navigation">
      <span class="cs-header">Quick Links</span>
      <ul class="cs-nav-list">
        {navLinks.map((link) => (
          <li class="cs-nav-li">
            <a class="cs-nav-link" href={link.href}>{link.name}</a>
          </li>
        ))}
      </ul>
    </nav>

    <div class="cs-contact">
      <span class="cs-header">Hours & Location</span>
      <ul class="cs-hours">
        {hours.map((item) => (
          <li><span>{item.days}</span><span>{item.time}</span></li>
        ))}
      </ul>
      <address class="cs-address">
        <a href="https://maps.google.com?q=2315+Main+St+Vancouver+WA+98660" target="_blank" rel="noopener">
          2315 Main St<br>Vancouver, WA 98660
        </a>
      </address>
      <a class="cs-phone" href="tel:+15039330151">(503) 933-0151</a>
    </div>
  </div>
  
  <div class="cs-bottom">
    <p class="cs-copyright">© 2024 Esan Thai Food Cart. All rights reserved.</p>
  </div>
</footer>

<style>
#footer {
  padding: 0 1rem 1.5rem;
  background-color: transparent;
}

#footer .cs-container {
  width: 100%;
  max-width: 80rem;
  margin: 0 auto;
  padding: clamp(2rem, 5vw, 3rem);
  background-color: #2A1F17;
  border-radius: 2rem;
  display: grid;
  grid-template-columns: 1fr;
  gap: 2.5rem;
}

#footer .cs-logo-group {
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

#footer .cs-logo {
  display: block;
  width: fit-content;
}

#footer .cs-logo-img {
  width: auto;
  height: clamp(2.5rem, 5vw, 3.5rem);
  object-fit: contain;
}

#footer .cs-text {
  font-size: 0.9375rem;
  line-height: 1.6;
  color: rgba(250, 248, 245, 0.8);
  margin: 0;
  max-width: 32ch;
}

#footer .cs-social {
  display: flex;
  gap: 0.75rem;
}

#footer .cs-social-link {
  width: 2.25rem;
  height: 2.25rem;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FAF8F5;
  transition: background-color 0.2s, transform 0.2s;
}

#footer .cs-social-link:hover {
  background-color: var(--primary);
  transform: translateY(-2px);
}

#footer .cs-header {
  font-size: 1rem;
  font-weight: 700;
  color: #FAF8F5;
  margin-bottom: 1rem;
  display: block;
}

#footer .cs-nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.625rem;
}

#footer .cs-nav-link {
  font-size: 0.9375rem;
  color: rgba(250, 248, 245, 0.8);
  text-decoration: none;
  transition: color 0.2s;
}

#footer .cs-nav-link:hover {
  color: var(--primary);
}

#footer .cs-contact {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

#footer .cs-hours {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.375rem;
}

#footer .cs-hours li {
  display: flex;
  justify-content: space-between;
  font-size: 0.875rem;
  color: rgba(250, 248, 245, 0.7);
  max-width: 14rem;
}

#footer .cs-address {
  font-style: normal;
  font-size: 0.9375rem;
  line-height: 1.5;
}

#footer .cs-address a {
  color: rgba(250, 248, 245, 0.8);
  text-decoration: none;
  transition: color 0.2s;
}

#footer .cs-address a:hover {
  color: var(--primary);
}

#footer .cs-phone {
  font-size: 1rem;
  font-weight: 600;
  color: #FAF8F5;
  text-decoration: none;
  transition: color 0.2s;
}

#footer .cs-phone:hover {
  color: var(--primary);
}

#footer .cs-bottom {
  max-width: 80rem;
  margin: 1rem auto 0;
  padding: 0 1rem;
  text-align: center;
}

#footer .cs-copyright {
  font-size: 0.8125rem;
  color: var(--bodyTextColor);
  opacity: 0.6;
  margin: 0;
}

/* Tablet */
@media (min-width: 48rem) {
  #footer .cs-container {
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 2rem;
  }

  #footer .cs-logo-group {
    grid-row: span 1;
  }
}

/* Desktop */
@media (min-width: 64rem) {
  #footer .cs-container {
    padding: clamp(2.5rem, 5vw, 4rem);
  }

  #footer .cs-text {
    max-width: 28ch;
  }
}
</style>