---
import navData from "@data/navData.json";
import Logo from "@assets/images/HomePage/logo.webp"
---

<header id="cs-navigation">
    <div class="cs-container">
        <a href="/" class="cs-logo" aria-label="back to home">
            <img src={Logo.src} alt="Esan Thai Food Cart" width="210" height="65" decoding="async">
        </a>
        
        <nav class="cs-nav" role="navigation">
            <button class="cs-toggle" aria-label="mobile menu toggle">
                <div class="cs-box" aria-hidden="true">
                    <span class="cs-line cs-line1" aria-hidden="true"></span>
                    <span class="cs-line cs-line2" aria-hidden="true"></span>
                    <span class="cs-line cs-line3" aria-hidden="true"></span>
                </div>
            </button>
            
            <div class="cs-ul-wrapper">
                <ul id="cs-expanded-ul" class="cs-ul">
                    {navData.map((entry: { key: string; url: string }) => (
                        <li class="cs-li">
                            <a href={entry.url} class="cs-li-link">{entry.key}</a>
                        </li>
                    ))}
                </ul>
            </div>
        </nav>
        
        <div class="cs-contact-group">
            <a href="tel:+15039330151" class="cs-phone">
                <svg class="cs-phone-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                (503) 933-0151
            </a>
            <!-- <a href="/menu/" class="cs-button-solid">View Menu</a> -->
        </div>
    </div>
</header>

<style>
/* Mobile */
@media only screen and (max-width: 63.9375rem) {
    body.cs-open {
        overflow: hidden;
    }
    
    body.scroll #cs-navigation {
        width: 100%;
        max-width: 100%;
        top: 0;
        border-radius: 0;
    }
    
    #cs-navigation {
        width: 94%;
        max-width: 80rem;
        box-sizing: border-box;
        padding: clamp(0.75rem, 2vw, 1.5rem);
        border-radius: clamp(0.75rem, 2vw, 1.5rem);
        background: var(--surfaceColor, #fff);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 1rem;
        left: 50%;
        z-index: 10000;
        transform: translateX(-50%);
        transition: top 0.3s, border-radius 0.3s, width 0.3s;
    }
    
    #cs-navigation.cs-active .cs-ul-wrapper {
        transform: scaleY(1);
    }
    
    #cs-navigation.cs-active .cs-li {
        opacity: 1;
        transform: translateY(0);
    }
    
    #cs-navigation .cs-container {
        width: 100%;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 1rem;
    }
    
    #cs-navigation .cs-logo {
        width: auto;
        max-width: 8rem;
        height: 2.5rem;
        margin: 0 auto 0 0;
        display: flex;
        align-items: center;
    }
    
    #cs-navigation .cs-logo img {
        width: auto;
        height: 100%;
        object-fit: contain;
    }
    
    #cs-navigation .cs-toggle {
        width: 2.75rem;
        height: 2.75rem;
        background-color: var(--primary);
        border: none;
        border-radius: 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }
    
    #cs-navigation .cs-box {
        width: 1.25rem;
        height: 0.875rem;
        position: relative;
    }
    
    #cs-navigation .cs-line {
        width: 100%;
        height: 2px;
        background-color: #fff;
        border-radius: 2px;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        transition: all 0.3s;
    }
    
    #cs-navigation .cs-line1 { top: 0; }
    #cs-navigation .cs-line2 { top: 50%; transform: translateX(-50%) translateY(-50%); }
    #cs-navigation .cs-line3 { bottom: 0; }
    
    #cs-navigation.cs-active .cs-line1 {
        top: 50%;
        transform: translate(-50%, -50%) rotate(45deg);
    }
    
    #cs-navigation.cs-active .cs-line2 {
        opacity: 0;
    }
    
    #cs-navigation.cs-active .cs-line3 {
        bottom: 50%;
        transform: translate(-50%, 50%) rotate(-45deg);
    }
    
    #cs-navigation .cs-ul-wrapper {
        width: 100%;
        background-color: var(--surfaceColor, #fff);
        border-radius: 0 0 1rem 1rem;
        position: absolute;
        top: 100%;
        left: 0;
        z-index: -1;
        overflow: hidden;
        transform: scaleY(0);
        transform-origin: top;
        transition: transform 0.3s;
    }
    
    #cs-navigation .cs-ul {
        width: 100%;
        margin: 0;
        padding: 1.5rem 0;
        list-style: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.25rem;
    }
    
    #cs-navigation .cs-li {
        opacity: 0;
        transform: translateY(-0.5rem);
        transition: opacity 0.3s, transform 0.3s;
    }
    
    #cs-navigation .cs-li:nth-of-type(1) { transition-delay: 0.05s; }
    #cs-navigation .cs-li:nth-of-type(2) { transition-delay: 0.1s; }
    #cs-navigation .cs-li:nth-of-type(3) { transition-delay: 0.15s; }
    #cs-navigation .cs-li:nth-of-type(4) { transition-delay: 0.2s; }
    
    #cs-navigation .cs-li-link {
        font-size: 1.125rem;
        font-weight: 600;
        text-decoration: none;
        color: var(--headerColor);
        transition: color 0.3s;
    }
    
    #cs-navigation .cs-li-link:hover {
        color: var(--primary);
    }
    
    #cs-navigation .cs-contact-group {
        display: none;
    }
}

/* Tablet */
@media only screen and (min-width: 48rem) and (max-width: 63.9375rem) {
    #cs-navigation .cs-contact-group {
        display: flex;
        align-items: center;
    }
    
    #cs-navigation .cs-phone {
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        color: var(--headerColor);
        display: flex;
        align-items: center;
        gap: 0.375rem;
    }
    
    #cs-navigation .cs-phone-icon {
        width: 1.25rem;
        height: 1.25rem;
    }
    
    #cs-navigation .cs-button-solid {
        display: none;
    }
}

/* Desktop */
@media only screen and (min-width: 64rem) {
    body.scroll #cs-navigation {
        width: 100%;
        max-width: 100%;
        top: 0;
        border-radius: 0;
    }
    
    #cs-navigation {
        width: 94%;
        max-width: 90rem;
        padding: 1rem 0;
        background-color: var(--surfaceColor, #fff);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        border-radius: clamp(0.75rem, 2vw, 1.5rem);
        position: fixed;
        top: 1.5rem;
        left: 50%;
        z-index: 10000;
        transform: translateX(-50%);
        transition: top 0.3s, border-radius 0.3s, width 0.3s;
    }
    
    #cs-navigation .cs-container {
        width: 100%;
        max-width: 90rem;
        margin: auto;
        padding: 0 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
    }
    
    #cs-navigation .cs-toggle {
        display: none;
    }
    
    #cs-navigation .cs-logo {
        width: auto;
        max-width: 12rem;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }
    
    #cs-navigation .cs-logo img {
        width: auto;
        height: 100%;
        object-fit: contain;
    }
    
    #cs-navigation .cs-ul-wrapper {
        display: flex;
        align-items: center;
    }
    
    #cs-navigation .cs-ul {
        margin: 0;
        padding: 0;
        list-style: none;
        display: flex;
        align-items: center;
        gap: clamp(1.25rem, 2.5vw, 2rem);
    }
    
    #cs-navigation .cs-li {
        display: flex;
        align-items: center;
    }
    
    #cs-navigation .cs-li-link {
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        color: var(--headerColor);
        transition: color 0.3s;
    }
    
    #cs-navigation .cs-li-link:hover {
        color: var(--primary);
    }
    
    #cs-navigation .cs-contact-group {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }
    
    #cs-navigation .cs-phone {
        font-size: 0.9375rem;
        font-weight: 600;
        text-decoration: none;
        color: var(--headerColor);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.3s;
    }
    
    #cs-navigation .cs-phone:hover {
        color: var(--primary);
    }
    
    #cs-navigation .cs-phone-icon {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
    }
    
    #cs-navigation .cs-button-solid {
        font-size: 0.9375rem;
        font-weight: 700;
        line-height: 1;
        text-decoration: none;
        color: var(--bodyTextColorWhite);
        background-color: var(--primary);
        padding: 0.875rem 1.5rem;
        border-radius: 0.5rem;
        transition: background-color 0.2s, transform 0.15s;
    }
    
    #cs-navigation .cs-button-solid:hover {
        background-color: var(--primaryLight);
        transform: scale(1.02);
    }
}
</style>